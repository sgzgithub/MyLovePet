<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F1F5"
    tools:context="com.example.im.mylovepet.ImmuneActivity">

    <ImageView
        android:id="@+id/Pet_immune_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@mipmap/back_gray" />

    <TextView
        android:id="@+id/pet_SettingImmune_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="免疫情况"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/Pet_SettingImmune_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="确定" />

    <CheckBox
        android:id="@+id/Pet_Setting_Immune"
        style="@style/RideoStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pet_SettingImmune_title"
        android:background="#fff"
        android:paddingLeft="20dp"
        android:text="以前是否免疫过"
        android:textSize="25sp" />

    <RelativeLayout
        android:id="@+id/Immune_Yes_No"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Pet_Setting_Immune"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="上次免疫时间"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/up_immune_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"

            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:src="@mipmap/enter" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/_up_immune_RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Immune_Yes_No"
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:visibility="gone">


        <TextView
            android:id="@+id/a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:paddingLeft="10dp"
            android:text="上次免疫时间"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/a"
            android:background="#fff"
            android:padding="10dp"
            android:text="请如实选择宠物以免疫病毒类型" />


        <CheckBox
            android:id="@+id/Pet_Check_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/b"
            android:layout_margin="10dp"
            android:background="#fff"
            android:button="@null"
            android:drawableLeft="@drawable/mybtnimage"
            android:padding="5dp"
            android:text="犬疫病毒" />

        <CheckBox
            android:id="@+id/Pet_Check_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Pet_Check_one"
            android:layout_margin="10dp"
            android:background="#fff"
            android:button="@null"
            android:drawableLeft="@drawable/mybtnimage"
            android:padding="5dp"
            android:text="犬腺病毒" />

        <CheckBox
            android:id="@+id/Pet_Check_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Pet_Check_four"
            android:layout_margin="10dp"
            android:layout_toRightOf="@+id/Pet_Check_two"
            android:background="#fff"
            android:button="@null"
            android:drawableLeft="@drawable/mybtnimage"
            android:padding="5dp"
            android:text="狂犬病病毒" />

        <CheckBox
            android:id="@+id/Pet_Check_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/b"
            android:layout_margin="10dp"
            android:layout_toRightOf="@+id/Pet_Check_one"
            android:background="#fff"
            android:button="@null"
            android:drawableLeft="@drawable/mybtnimage"
            android:padding="5dp"
            android:text="犬细小病毒" />
    </RelativeLayout>
