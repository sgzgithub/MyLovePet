<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#847979"
    android:gravity="center">

    <Button
        android:id="@+id/a"
        android:background="@mipmap/bomb_box_bg_03_d"
        android:gravity="center"
        android:text="更换用户头像"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="70%" />

    <Button
        android:id="@+id/pz"
        android:layout_below="@+id/a"
        android:layout_marginTop="1dp"
        android:background="@mipmap/bomb_box_bg_02_d"
        android:gravity="center"
        android:text="拍照"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="70%" />

    <Button
        android:id="@+id/xc"
        android:layout_below="@+id/pz"
        android:layout_marginTop="1dp"
        android:background="@mipmap/bomb_box_bg_03"
        android:gravity="center"
        android:text="相册"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="70%" />

    <Button
        android:id="@+id/qx"
        android:layout_below="@+id/xc"
        android:layout_marginTop="5dp"
        android:background="@drawable/popup_shape"
        android:gravity="center"
        android:text="取消"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="70%" />

</android.support.percent.PercentRelativeLayout>